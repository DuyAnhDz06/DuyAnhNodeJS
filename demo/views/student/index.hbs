<link rel="stylesheet" href="/demo/public/stylesheets/style.css">

<table class="table table-bordered bg-light p-4 mt-3 mb-3 text-center">
   <tr>
      <th class="text-primary" colspan="4">Student List</th>
      <th>
         <a class="btn btn-info" href="student/add">ADD</a>   
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Date</th>
      <th>Image</th>
      <th>Menu</th>
   </tr>
   {{#each students }}
   <tr>
      <td>{{name}}</td>
      <td>{{gender}}</td>
      <td>{{dateFormat dob "DD-MM-YYYY"}}</td>
      <td>
          <a href="student/detail/{{_id}}">
            <img src="{{image}}" width="150" height="150">
         </a>
         </td>
      <td>
         <a class="btn btn-success" href="student/edit/{{_id}}">EDIT</a>
         <a class="btn btn-danger" href="student/delete/{{_id}}">DELETE</a>
      </td>
   </tr>
   {{/each}}
</table>
<style>
   .btn{
      border-radius: 50%;
   }
</style>