<div class="container col-md-10 text-center mt-5">
  {{!-- api data will be displayed here --}}
</div>

<script>
  let url = "https://tableduyanhdz.herokuapp.com/student"
  fetch(url)
  .then(response => response.json())
  .then(data => renderTable(data))

  function renderTable(data) {
    var table = `<table class="table table-bordered">
                  <tr>
                      <th colspan="5" class="h2 text-primary">Student List</th>
                  </tr>
                  <tr class="h6 text-success">
                      <th>Student name</th>
                      <th>Student email</th>
                      <th>Student age</th>
                      <th>Student address</th>
                      <th>Student image</th>
                  </tr>`;

    data.forEach((row) => {
      table += `<tr>
                    <td>${row.name}</td>
                    <td>${row.email} </td>
                    <td>${row.age}  </td>
                    <td>${row.address}  </td>
                    <td>
                      <img src="${row.image}" width="200" height="200">
                    </td>
                </tr>`;
    });
    
    table += `</table>`;

    document.querySelector(".container").innerHTML = table;
  }
  </script>