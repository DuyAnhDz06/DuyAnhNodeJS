<table class="table table-bordered text-center">
  <tr>
    <th class="text-bg-secondary" colspan="3">Mobile List</th>
    <th>
      <a class="btn btn-info" href="/mobile/add">Add</a>
    </th>
  </tr>
  <tr>
    <th>Mobile Name</th>
    <th>Mobile Price</th>
    <th>Mobile Image</th>
    <th>Menu</th>
  </tr>
  {{#each mobiles}}
    <tr>
      <td>{{name}}</td>
      <td>$ {{price}}</td>
      <td>
          <a href="/mobile/detail/{{_id}}">
          <img src="{{image}}" width="100" height="100" />
        </a>
        
      </td>
    
      <td>
        <a class="btn btn-success" href="/mobile/edit/{{_id}}">Edit</a>
        <a class="btn btn-danger" href="/mobile/delete/{{_id}}">Delete</a>
      </td>
    </tr>
  {{/each}}
</table>